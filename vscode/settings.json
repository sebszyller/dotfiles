{
  "breadcrumbs.enabled": false,
  "cSpell.diagnosticLevel": "Hint",
  "cSpell.language": "en, en-GB",
  "cSpell.userWords": [
    "Szyller"
  ],
  "editor.accessibilitySupport": "off",
  "editor.copyWithSyntaxHighlighting": false,
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorStyle": "block",
  "editor.formatOnSave": false,
  "editor.fontFamily": "'PragmataPro Mono', Monaco",
  "editor.fontSize": 16,
  "editor.lineHeight": 23,
  "editor.largeFileOptimizations": false,
  "editor.inlayHints.enabled": "offUnlessPressed",
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.quickSuggestionsDelay": 1,
  "editor.renderWhitespace": "selection",
  "editor.smoothScrolling": true,
  "editor.stickyScroll.enabled": false,
  "editor.wordWrap": "on",
  "errorLens.enabledDiagnosticLevels": [
    "error",
    "warning",
    "info"
  ],
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.decorations.badges": false,
  "extensions.ignoreRecommendations": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/_site": true,
    "**/*.pyc": true,
    "**/*.asset-cache": true,
    "**/*.cache": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "never",
  "latex-workshop.latex.external.build.command": "make",
  "latex-workshop.latex.external.build.args": [ "all", "sweep" ],
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.latex.autoBuild.run": "onSave",
  "jupyter.askForKernelRestart": false,
  "notebook.output.textLineLimit": 100,
  "notebook.lineNumbers": "on",
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.inlayHints.callArgumentNames": "partial",
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.variableTypes": true,
  "telemetry.telemetryLevel": "off",
  "update.mode": "start",
  "vim.timeout": 500,
  "vim.useSystemClipboard": true,
  "vim.cursorStylePerMode.insert": "line",
  "vim.cursorStylePerMode.normal": "block",
  "vim.cursorStylePerMode.replace": "block",
  "vim.cursorStylePerMode.visual": "block-outline",
  "vim.cursorStylePerMode.visualblock": "block-outline",
  "vim.cursorStylePerMode.visualline": "block-outline",
  "vim.foldfix": true,
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.highlightedyank.enable": true,
  "vim.leader": "<space>",
  "vim.insertModeKeyBindingsNonRecursive": [
    { "before": [ "<C-p>" ], "after": [ "<Esc>", "p", "a" ] },
    { "before": [ "<C-d>" ], "after": [ "<Del>" ] },
    { "before": [ "<C-e>" ], "commands": [ "hideSuggestWidget" ] },
    { "before": [ "<C-h>" ], "commands": [ "editor.action.triggerParameterHints" ] },
    { "before": [ "<C-l>" ], "commands": [ "editor.action.accessibleViewAcceptInlineCompletion" ] },
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": [ "<C-h>" ], "commands": ["workbench.action.navigateLeft"] },
    { "before": [ "<C-l>" ], "commands": ["workbench.action.navigateRight"] },
    { "before": [ "<C-j>" ], "commands": ["workbench.action.navigateDown"] },
    { "before": [ "<C-k>" ], "commands": ["workbench.action.navigateUp"] },
    { "before": [ "K" ], "commands": ["editor.action.showHover"] },
    { "before": [ "<C-d>" ], "after": [ "<C-d>", "z", "z" ] },
    { "before": [ "<C-u>" ], "after": [ "<C-u>" , "z", "z" ] },
    { "before": [ "n" ], "after": ["n", "z", "z"] },
    { "before": [ "N" ], "after": ["N", "z", "z"] },
    { "before": ["J"], "after": ["m", "z", "J", "`", "z"] },
    { "before": ["u"], "commands": ["undo"] },
    { "before": ["<C-r>"], "commands": ["redo"] },
    { "before": ["<leader>", "s", "v"], "commands": ["workbench.action.splitEditor"] },
    { "before": ["<leader>", "s", "h"], "commands": ["workbench.action.splitEditorDown"] },
    { "before": ["<leader>", "w"], "commands": ["workbench.action.files.save"] },
    { "before": ["<leader>", "q"], "commands": ["workbench.action.closeActiveEditor"] },
    { "before": ["<leader>", "w", "q"], "commands": ["workbench.action.files.save", "workbench.action.closeActiveEditor"] },
    { "before":["<Esc>"], "after":["<Esc>"], "commands": [ ":nohl" ] }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    { "before": ["p"], "after": ["p", "g", "v", "y"] },
    { "before": ["J"], "commands": ["editor.action.moveLinesDownAction"] },
    { "before": ["K"], "commands": ["editor.action.moveLinesUpAction"] },
    { "before": ["<"], "after": ["<", "g", "v"] },
    { "before": [">"], "after": [">", "g", "v"] }
  ],
  "window.commandCenter": false,
  "window.titleBarStyle": "custom",
  "workbench.colorCustomizations": {},
  "workbench.editorAssociations": { "*.ipynb": "jupyter-notebook" },
  "workbench.layoutControl.enabled": false,
  "workbench.statusBar.visible": true,
  "workbench.activityBar.location": "bottom",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.sideBar.location": "right",
  "workbench.colorTheme": "Solarized Light",
}
