[core]
    pager = delta
    editor = nvim

[commit]
	gpgsign = true

[delta]
    syntax-theme = ansi
    navigate = true  # use n and N to move between diff sections
    side-by-side = false

[diff]
    colorMoved = default

[gpg]
    format = ssh

[gpg "ssh"]
	allowedSignersFile = ~/.ssh/allowed_signers

[interactive]
    diffFilter = delta --color-only

[merge]
    conflictstyle = diff3

[pull]
	rebase = true

[rerere]
	enabled = true

[user]
    name = Sebastian Szyller
    email = contact@sebszyller.com
	signingkey = ~/.ssh/id_ed25519.pub

[tag]
	gpgsign = true

